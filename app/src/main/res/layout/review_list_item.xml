<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_review_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_list_from"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="asbozh"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintTop_toTopOf="@+id/tv_review_from"
        app:layout_constraintBottom_toBottomOf="@+id/tv_review_from"
        android:layout_marginBottom="@dimen/activity_vertical_margin_small"
        app:layout_constraintLeft_toRightOf="@+id/tv_review_from"
        android:layout_marginStart="@dimen/activity_horizontal_margin_small"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        tools:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_from" />

</android.support.constraint.ConstraintLayout>